                <div class="form-group">
                    <label asp-for="BoatOwnerItem.Fish.FishName" class="control-label"></label>
                    <select asp-for="BoatOwnerItem.FishID" class="form-control" asp-items="ViewBag.FishID"></select>
                </div>
                <div class="form-group">
                    <label asp-for="BoatOwnerItem.ProductionType.ProductionName" class="control-label">نوع الانتاج</label>
                    <select asp-for="BoatOwnerItem.ProductionTypeID" class="form-control" asp-items="ViewBag.ProductionTypeID"></select>
                </div>
                <div class="form-group">
                    <label asp-for="BoatOwnerItem.Qty" class="control-label"></label>
                    <input asp-for="BoatOwnerItem.Qty" class="form-control" />
                    <span asp-validation-for="BoatOwnerItem.Qty" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BoatOwnerItem.UnitPrice" class="control-label"></label>
                    <input asp-for="BoatOwnerItem.UnitPrice" class="form-control" />
                    <span asp-validation-for="BoatOwnerItem.UnitPrice" class="text-danger"></span>
                </div>
            </div>
            <div class="modal-footer md-button">
                <button class="btn" data-dismiss="modal"><i class="flaticon-cancel-12"></i> اغلاق</button>
                <button type="button" class="btn btn-primary" id="NewRows">حفظ</button>
