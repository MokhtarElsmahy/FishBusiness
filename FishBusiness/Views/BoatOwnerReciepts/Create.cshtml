</div>
@section scripts{
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery-cookie/1.4.1/jquery.cookie.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#btnSave').hide();
            $('.total').hide();

        })
        $("#NewRows").click(function () {
            var BoatOwnerItem_FishID = $('#BoatOwnerItem_FishID option:selected').text()
            var BoatOwnerItem_ProductionTypeID = $('#BoatOwnerItem_ProductionTypeID option:selected').text()
            var BoatOwnerItem_Qty = $('#BoatOwnerItem_Qty').val()
            var BoatOwnerItem_UnitPrice = $('#BoatOwnerItem_UnitPrice').val()
            var addControls = "<tr>"
            addControls += "<td class='fishes'>" + BoatOwnerItem_FishID + "</td>"
            addControls += "<td class='productions'>" + BoatOwnerItem_ProductionTypeID + "</td>"
            addControls += "<td class='qtys'>" + BoatOwnerItem_Qty + "</td>"
            addControls += "<td class='unitprices'>" + BoatOwnerItem_UnitPrice + "</td>"
            addControls += "<td class='prices'>" + BoatOwnerItem_UnitPrice * BoatOwnerItem_Qty + "</td>"
            addControls += "</tr>";
            $('#TotalBeforePayment').text(parseFloat($('#TotalBeforePayment').text()) + BoatOwnerItem_UnitPrice * BoatOwnerItem_Qty);
            $('#commision').text(@ViewBag.Commission.Value * parseFloat($('#TotalBeforePayment').text()) / 100)
            $('#TotalProduction').text(parseFloat($('#TotalBeforePayment').text()) - parseFloat($('#commision').text()))

            $('#btnSave').show();
            $('.total').show();
            $('#BoatOwnerItem_Qty').val('');
            $('#BoatOwnerItem_UnitPrice').val('');
            $('table tbody').append(addControls);

        });
        $("#btnCalc").click(function () {
            if (!$('#BoatOwnerReciept_PaidFromDebts').val()) {
                $('#TotalProduction').text(parseFloat($('#TotalBeforePayment').text()) - parseFloat($('#commision').text()))
            }
            else {
                $('#TotalProduction').text(parseFloat($('#TotalBeforePayment').text()) - parseFloat($('#commision').text()) - parseFloat($('#BoatOwnerReciept_PaidFromDebts').val()));
            }
        });

        var cookieList = function (cookieName) {
            //When the cookie is saved the items will be a comma seperated string
            //So we will split the cookie by comma to get the original array
            var cookie = $.cookie(cookieName);
            //Load the items or a new array if null.
            var items = cookie ? cookie.split(/,/) : new Array();

            //Return a object that we can use to access the array.
            //while hiding direct access to the declared items array
            //this is called closures see http://www.jibbering.com/faq/faq_notes/closures.html
            return {
                "add": function (val) {
                    //Add to the items.
                    items.push(val);
                    var date = new Date();
                    date.setTime(date.getTime() + (45 * 1000));
                    //Save the items to a cookie.
                    //EDIT: Modified from linked answer by Nick see
                    //      http://stackoverflow.com/questions/3387251/how-to-store-array-in-jquery-cookie
                    $.cookie(cookieName, items.join(','), { expires: date });
                },
                "remove": function (val) {
                    //EDIT: Thx to Assef and luke for remove.
                    indx = items.indexOf(val);
                    if (indx != -1) items.splice(indx, 1);
                    $.cookie(cookieName, items.join(','));
                },
                "clear": function () {
                    items = null;
                    //clear the cookie.
                    $.cookie(cookieName, null);
                },
                "items": function () {
                    //Get all the items.
                    return items;
                }
            }
        }
        $("#btnSave").click(function () {

            var TotalBeforePayment = new cookieList("TotalBeforePayment"); // all items in the array.
            TotalBeforePayment.add($('#TotalBeforePayment').text())
            var commision = new cookieList("commision"); // all items in the array.
            commision.add($('#commision').text())
            var  PaidFromDebts = new cookieList("PaidFromDebts"); // all items in the array.
            PaidFromDebts.add($('#BoatOwnerReciept_PaidFromDebts').val())
            var TotalProduction = new cookieList("TotalProduction"); // all items in the array.
            TotalProduction.add($('#TotalProduction').text())


            var FishNames = new cookieList("FishNames"); // all items in the array.
            $('.fishes').each(function () {
                FishNames.add($(this).text());
            })
            var ProductionTypes = new cookieList("ProductionTypes"); // all items in the array.
            $('.productions').each(function () {
                ProductionTypes.add($(this).text());
            })
            var qtys = new cookieList("qtys"); // all items in the array.
            $('.qtys').each(function () {
                qtys.add($(this).text());
            })
            var unitprices = new cookieList("unitprices"); // all items in the array.
            $('.unitprices').each(function () {
                unitprices.add($(this).text());
            })
            var prices = new cookieList("prices"); // all items in the array.
            $('.prices').each(function () {
                prices.add($(this).text());
            })
        });
    </script>

}
