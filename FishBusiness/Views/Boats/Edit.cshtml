@model FishBusiness.ViewModels.BoatVM
@{
    ViewData["Title"] = "edit";
    var img = Model.BoatImage == null ? "default.png" : Model.BoatImage;
}

@section Styles{
    <!--  BEGIN CUSTOM STYLE FILE  -->
    <link href="~/assets/css/scrollspyNav.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" type="text/css" href="~/plugins/jquery-step/jquery.steps.css">

    <link href="~/plugins/file-upload/file-upload-with-preview.min.css" rel="stylesheet" type="text/css" />
    <style>
        #formValidate .wizard > .content {
            min-height: 25em;
        }

        #example-vertical.wizard > .content {
            min-height: 24.5em;
        }
    </style>
}

<div class="container">
    <div class="container">

        <div class="page-header">
            <div class="page-title">
                <h3>استمارة</h3>
            </div>
        </div>

        <div class="row layout-top-spacing" id="cancel-row">


            <div class="col-lg-12 layout-spacing">
                <div class="statbox widget box box-shadow">
                    <div class="widget-header">
                        <div class="row">
                            <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                <h4>استمارة تعديل بيانات مركب</h4>
                            </div>
                        </div>
                    </div>
                    <form asp-action="Edit" method="post" enctype="multipart/form-data">
                        <div class="widget-content widget-content-area">
                            <div id="circle-basic" class="">
                                <h3>بيانات</h3>

                                <section>
                                    <div class="form-group">
                                        <input type="hidden" asp-for="BoatID" />
                                        <input type="hidden" asp-for="BoatImage" />
                                        <label asp-for="BoatName" >اسم المركب</label>
                                        <input asp-for="BoatName" type="text" class="form-control" id="exampleFormControlInput1">
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="BoatLeader">اسم ريس المركب</label>
                                        <input asp-for="BoatLeader" type="text" class="form-control" id="exampleFormControlInput1">
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="DebtsOfHalek">ديون الهالك</label>
                                        <input asp-for="DebtsOfHalek" type="text" class="form-control" id="exampleFormControlInput1">
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="DebtsOfMulfunction">ديون الاعطال</label>
                                        <input asp-for="DebtsOfMulfunction" type="text" class="form-control" id="exampleFormControlInput1">
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="DebtsOfStartingWork">دين بداية العمل</label>
                                        <input asp-for="DebtsOfStartingWork" type="text" class="form-control" id="exampleFormControlInput1">
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="BoatNumber">رقم المركب</label>
                                        <input asp-for="BoatNumber" type="text" class="form-control" id="exampleFormControlInput1">
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="BoatLicenseNumber" for="exampleFormControlInput1">رخصة المركب</label>
                                        <input asp-for="BoatLicenseNumber" type="text" class="form-control" id="exampleFormControlInput1">
                                    </div>
                                    <div class="form-group">
                                        <label>نوع العمل مع المركب</label>

                                        <select class="form-control" asp-for="TypeID" asp-items="ViewBag.Types as SelectList">
                                            <option>اختر نوع المركب</option>
                                        </select>
                                    </div>
                                   
                                </section>




                                <h3>صورة</h3>
                                <section>
                                    <div>

                                        <div id="fuSingleFile" class="col-lg-12 layout-spacing">
                                            <div class="statbox widget box box-shadow">
                                                <div class="widget-header">
                                                    <div class="row">
                                                        <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                                            <h4>اختر صورة</h4>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="widget-content widget-content-area">
                                                    <div class="custom-file-container" data-upload-id="myFirstImage">
                                                        <label>تغيير الصورة <a href="javascript:void(0)" onclick="loadFileNull()" class="custom-file-container__image-clear" title="Clear Image">x</a></label>
                                                        <label class="custom-file-container__custom-file">
                                                           
                                                            <input type="file" asp-for="File" onchange="loadFile(event)" class="custom-file-container__custom-file__custom-file-input" accept="image/*">
                                                            <input type="hidden" name="MAX_FILE_SIZE" value="10485760" />
                                                            <span class="custom-file-container__custom-file__custom-file-control"></span>
                                                        </label>
                                                       
                                                    <div style="text-align:center;margin-top:10px;"> <img src="~/img/@img" id="output" class="img-thumbnail" style="width:400px;height:300px;" /></div>

                                                    </div>


                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </section>


                                <h3>انهاء</h3>
                                <section>
                                    <div class="row mt-5">
                                        <div class="col-sm-4">

                                        </div>
                                        <div class="col-sm-4">
                                            <button type="submit" class="btn btn-primary mb-4 mr-2 btn-lg">اضغط لحفظ بيانات المركب </button>
                                        </div>
                                        <div class="col-sm-4">

                                        </div>

                                    </div>

                                </section>
                            </div>

                            <div class="code-section-container">

                                <div class="code-section text-left">
                                    <pre>
$("selector").steps({
    cssClass: 'circle wizard'
});
</pre>
                                </div>
                            </div>

                        </div>
                    </form>
                </div>
            </div>



        </div>

    </div>
</div>


@section scripts{
    <script src="~/plugins/highlight/highlight.pack.js"></script>
    <script src="~/assets/js/custom.js"></script>
    <script src="~/assets/js/scrollspyNav.js"></script>
    <script src="~/plugins/jquery-step/jquery.steps.min.js"></script>
    <script src="~/plugins/jquery-step/custom-jquery.steps.js"></script>


    <script src="~/plugins/file-upload/file-upload-with-preview.min.js"></script>
    <script>

        var firstUpload = new FileUploadWithPreview('myFirstImage')
    </script>

    <script>
        var loadFile = function (event) {
            var reader = new FileReader();
            reader.onload = function () {
                var output = document.getElementById('output');
                output.src = reader.result;
            };
            reader.readAsDataURL(event.target.files[0]);
        };

        var loadFileNull = function () {
           
                var output = document.getElementById('output');
                output.src = "/img/default.png";
            
        };
    </script>
}


