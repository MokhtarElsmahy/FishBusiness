@model IEnumerable<FishBusiness.Models.Expense>

@{
    ViewData["Title"] = "Index";
}






@section Styles{
    <link rel="stylesheet" type="text/css" href="~/plugins/table/datatable/datatables.css">
    <link rel="stylesheet" type="text/css" href="~/plugins/table/datatable/dt-global_style.css">

}
<div class="layout-px-spacing">
    <div class="container row">
        <div class="page-header m-3">
            <div class="page-title">
                <h3>ادارة المصروفات</h3>
            </div>
        </div>
        <div class="mt-4 ml-auto">
            <a asp-action="Create" class="btn btn-primary">اضافة مصروف جديد</a>
            
        </div>
    </div>

    <div class="row layout-top-spacing" id="cancel-row">

        <div class="col-xl-12 col-lg-12 col-sm-12  layout-spacing">
            <div class="widget-content widget-content-area br-6">
                <div class="table-responsive mb-4 mt-4">
                    <table id="zero-config" class="table table-hover" style="width:100%">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Boat.BoatName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Price)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Cause)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Date)
                                </th>
                                <th></th>


                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Any())
                            {
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Boat.BoatName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Price)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Cause)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Date)
                                        </td>
                                        <td>
                                            <a asp-action="Edit" class="btn btn-success mb-2" asp-route-id="@item.ExpenseID">تعديل</a> |
                                            @*<a asp-action="Details" class="btn btn-info mb-2" asp-route-id="@item.ExpenseID">Details</a> |*@
                                            <a class="btn btn-danger mb-2 delete"
                                               data-id="@item.ExpenseID"
                                               data-controller="Expenses"
                                               data-action="Delete"
                                               data-body-message="هل انت متأكد من عملية الحذف ؟">حذف</a>
                                        </td>
                                    </tr>


                                
                                }

                            }
                            else
                            {
                                <tr>

                                    <td class="font-weight-bolder">لا توجد مصروفات</td>

                                    @*<td><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-x-circle table-cancel"><circle cx="12" cy="12" r="10"></circle><line x1="15" y1="9" x2="9" y2="15"></line><line x1="9" y1="9" x2="15" y2="15"></line></svg></td>*@
                                </tr>
                            }


                        </tbody>

                    </table>
                </div>
            </div>
        </div>

    </div>

</div>








