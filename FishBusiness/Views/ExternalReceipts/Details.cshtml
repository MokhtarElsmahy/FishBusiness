@model FishBusiness.Models.ExternalReceipt

@{
    ViewData["Title"] = "Details";
}
@section Styles{
    <link href="~/plugins/perfect-scrollbar/perfect-scrollbar.css" rel="stylesheet" type="text/css" />
    <!-- END GLOBAL MANDATORY STYLES -->
    <!--  BEGIN CUSTOM STYLE FILE  -->
    <link href="~/assets/css/apps/invoice.css" rel="stylesheet" type="text/css" />
    <!--  END CUSTOM STYLE FILE  -->
    <link href="~/assets/css/print.min.css" rel="stylesheet" />
}
<div class="layout-px-spacing">

    <div class="container row">
        <div class="page-header m-3">
            <div class="page-title">
                <h3>تفاصيل الفاتورة الخارجية</h3>
            </div>
        </div>
        <div class="mt-4 ml-auto">
            <div class="row">
                <div class="company-info ml-2" style="margin-left:5px;">
                    <button class="btn btn-secondary ml-2" id="btnPrint">طباعة</button>
                </div>
                <a asp-action="Index" class="btn btn-primary mr-2 ">قائمة الفواتير الخارجية</a>
            </div>
        </div>

    </div>

    <div class="row invoice layout-top-spacing">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="doc-container">


                <div class="invoice-container">

                    <div id="ct" class="">

                        <div class="invoice-00001">
                            <div class="content-section  animated animatedFadeInUp fadeInUp">

                                <div class="row inv--head-section">

                                    <div class="col-sm-6 col-12">
                                        <h3 class="in-heading">فاتورة المركب الخارجية</h3>
                                    </div>


                                </div>
                                <div id="Invoice">
                                    <div class="row inv--detail-section">



                                        <div class="col-sm-7 align-self-center">
                                            <p class="inv-customer-name"> @Html.DisplayNameFor(model => model.Boat.BoatName) : @Html.DisplayFor(model => model.Boat.BoatName)</p>
                                            <p class="inv-street-addr">رقم الفاتورة : @Html.DisplayFor(model => model.ExternalReceiptID)</p>
                                            <p class="inv-street-addr">رقم السرحة : @Html.DisplayFor(model => model.SarhaID)</p>
                                            <p class="inv-street-addr">تاريخ السرحة : @Html.DisplayFor(model => model.Sarha.DateOfSarha)</p>
                                            <p class="inv-email-address">@Html.DisplayNameFor(model => model.Date) : @Html.DisplayFor(model => model.Date)</p>
                                        </div>
                                    </div>


                                    <div class="row mt-4  ">
                                        <div class="col-sm-5 col-12 order-sm-0 order-1">
                                        </div>
                                        <div class="col-sm-7 col-12 order-sm-1 order-0">
                                            <div class="inv--total-amounts text-sm-right">
                                                <div class="row">
                                                    <div class="col-sm-8 col-7">
                                                        <p class="">الاجمالي قبل العمولة </p>
                                                    </div>
                                                    <div class="col-sm-4 col-5">
                                                        <p class="">@Html.DisplayFor(model => model.TotalBeforePaying)</p>
                                                    </div>

                                                    <div class="col-sm-8 col-7">
                                                        <p class="">قيمة العمولة الخارجية  </p>
                                                    </div>
                                                    <div class="col-sm-4 col-5">
                                                        <p class="">@Html.DisplayFor(model => model.Commission)</p>
                                                    </div>
                                                    <div class="col-sm-8 col-7">
                                                        <p class=" discount-rate">ما تم دفعه من الهالك </p>
                                                    </div>
                                                    <div class="col-sm-4 col-5">
                                                        <p class="">@Html.DisplayFor(model => model.PaidFromDebts)</p>
                                                    </div>
                                                    <div class="col-sm-8 col-7">
                                                        <p class=" discount-rate">باقي الهالك علي المركب </p>
                                                    </div>
                                                    <div class="col-sm-4 col-5">
                                                        <p class="">@Html.DisplayFor(model => model.Boat.DebtsOfHalek)</p>
                                                    </div>
                                                    <div class="col-sm-8 col-7 grand-total-title ">
                                                        <h4 class="text-info">صافي انتاج المركب </h4>
                                                    </div>
                                                    <div class="col-sm-4 col-5 grand-total-amount">
                                                        <h4 class="text-info">@Html.DisplayFor(model => model.TotalAfterPaying)</h4>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>


                    </div>


                    <div class="col-sm-6 col-12 align-self-center text-sm-right mb-3 mt-0 ml-auto">
                        <div class="company-info">
                            <button class="btn btn-secondary" id="btnPrint1">طباعة</button>
                        </div>
                    </div>
                    <div class="inv--thankYou">
                        <div class="row">
                            <div class="col-sm-12 col-12">
                                <p class="">Thank you for doing Business with us.</p>
                            </div>
                        </div>
                    </div>

                </div>

            </div>

        </div>
    </div>
</div>

@section scripts{
    @*   <script src="~/assets/js/print.min.js"></script>*@
    <script src="~/assets/js/apps/invoice.js"></script>
    <script>
        $("#btnPrint").click(function () {
            window.print()
        });
        $("#btnPrint1").click(function () {
            window.print()
        });
    </script>

}
