@model IEnumerable<FishBusiness.Models.PersonReciept>
<table id="zero-config" class="table table-hover" style="width:100%">
    <thead>
        <tr>
            <th>رقم الفاتوره</th>
            <th>@Html.DisplayNameFor(i => i.Date)</th>
            <th>@Html.DisplayNameFor(i => i.PersonName)</th>
            <th>@Html.DisplayNameFor(i => i.TotalPrice)</th>
            @*<th>@Html.DisplayNameFor(i => i.Merchant.PreviousDebts)</th>
                <th>@Html.DisplayNameFor(i => i.payment)</th>*@

            <th></th>


        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.PersonRecieptID</td>
                    <td>@item.Date.ToString("dd/MM/yyyy")</td>
                    <td>@item.PersonName</td>
                    <td>@item.TotalPrice</td>

                    <td>

                        <a asp-action="DetailsPersonReciept" asp-route-id="@item.PersonRecieptID" class="btn btn-info mb-2">تفاصيل</a>
                        <a class="btn btn-danger mb-2 delete"
                           data-id="@item.PersonRecieptID"
                           data-controller="MerchantReciepts"
                           data-action="DeletePersonReciept"
                           data-body-message="هل انت متأكد من عملية الحذف ؟">حذف</a>
                    </td>

                </tr>
            }

        }
        else
        {
            <tr>

                <td class="font-weight-bolder">لا توجد فواتير</td>

                @*<td><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-x-circle table-cancel"><circle cx="12" cy="12" r="10"></circle><line x1="15" y1="9" x2="9" y2="15"></line><line x1="9" y1="9" x2="15" y2="15"></line></svg></td>*@
            </tr>
        }


    </tbody>

</table>