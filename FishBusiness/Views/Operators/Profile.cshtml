    <div class="row layout-spacing">

        <div class="education layout-spacing col-6">
            <div class="widget-content widget-content-area">
                <div class="container row">
                    <h3 class="">المدفوعات</h3>
                </div>
                <div class="row layout-top-spacing" id="cancel-row">

                    <div class="col-xl-12 col-lg-12 col-sm-12  layout-spacing">
                        <div class="widget-content widget-content-area br-6">
                            <div class="table-responsive mb-4 mt-4">
                                <table id="zero-configf" class="table table-hover" style="width:100%">
                                    <thead>
                                        <tr>
                                           
                                            <th>تاريخ </th>
                                            <th>المبلغ</th>
                                            <th>باقى له</th>
                                            <th>المسئول</th>


                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model.PaidsForOperator.Any())
                                            {
                                                @foreach (var paid in Model.PaidsForOperator)
                                                {
                                                    <tr>
                                                       
                                                        <td>@paid.Date</td>
                                                        <td>@paid.Payment</td>
                                                        <td>@paid.DebtsAfterPayment</td>
                                                        <td>@paid.Person.Name</td>

                                                    </tr>
                                                }

                                            }
                                            else
                                            {
                                                <tr>

                                                    <td class="font-weight-bolder">لا توجد مدفوعات</td>


                                                </tr>
                                            }


                                    </tbody>

                                </table>
                            </div>
                        </div>

                    </div>
