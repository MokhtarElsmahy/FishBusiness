@model IEnumerable<FishBusiness.Models.Sarha>

@{
    ViewData["Title"] = "Index";
}
@section Styles{
    <link rel="stylesheet" type="text/css" href="~/plugins/table/datatable/datatables.css">
    <link rel="stylesheet" type="text/css" href="~/plugins/table/datatable/dt-global_style.css">

}
<div class="layout-px-spacing">
    <div class="container row">
        <div class="page-header m-3">
            <div class="page-title">
                <h3>ادارة السرحات</h3>
            </div>
        </div>
        <div class="mt-4 ml-auto">
            <a asp-action="Create" class="btn btn-primary">اضافة سرحة جديدة</a>
        </div>
    </div>

    <div class="row layout-top-spacing" id="cancel-row">

        <div class="col-xl-12 col-lg-12 col-sm-12  layout-spacing">
            <div class="widget-content widget-content-area br-6">
                <div class="table-responsive mb-4 mt-4">
                    <table id="zero-config" class="table table-hover" style="width:100%">
                        <thead>
                            <tr>
                                <th>
                                    رقم السرحة
                                </th>
                                <th>
                                    اسم المركب
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.NumberOfFishermen)
                                </th>
                                
                                <th>
                                    @Html.DisplayNameFor(model => model.DateOfSarha)
                                </th>
                                
                                <th></th>


                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Any())
                            {
                                @foreach (var item in Model)
                                {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SarhaID)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Boat.BoatName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NumberOfFishermen)
                                </td>
                                
                                <td>
                                    @Html.DisplayFor(modelItem => item.DateOfSarha)
                                </td>

                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.SarhaID" class="btn btn-success mb-2">تعديل</a>
                                    <a asp-action="Details" asp-route-id="@item.SarhaID" class="btn btn-info mb-2">تفاصيل</a>
                                    <a asp-action="Delete" onclick="return confirm('هل انت متأكد من عملية الحذف ؟ ')" asp-route-id="@item.SarhaID" class="btn btn-danger mb-2">حذف</a>

                                </td>
                            </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td></td>
                                    <td></td>
                                    <td class="font-weight-bolder">لا توجد سرحات</td>
                                    <td></td>
                                    <td></td>

                                    @*<td><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-x-circle table-cancel"><circle cx="12" cy="12" r="10"></circle><line x1="15" y1="9" x2="9" y2="15"></line><line x1="9" y1="9" x2="15" y2="15"></line></svg></td>*@
                                </tr>
                            }


                        </tbody>

                    </table>
                </div>
            </div>
        </div>

    </div>

</div>
